@using WorkoutWarriors.View_Model;
@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}


<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Workout Warriors</h1>
        <p class="lead font-weight-normal">Join today to keep track of your workouts and keep track of your favorite gyms!</p>
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </div>
    <div class="product-device box-shadow d-none d-md-block"></div>
    <div class="product-device product-device-1 box-shadow d-none d-md-block"></div>
</div>

<div class="d-flex justify-content-between my-3">
    <div class="bg-dark mr-3 pt-3 px-3 pt-lg-5 px-md-5 text-center text-white overflow-hidden flex-grow-1">
        <div class="my-3 py-3">
            <h2 class="display-5">Already a Member?</h2>
            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Login">Sign in here!</a>
        </div>
        <div class="bg-light box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"></div>
    </div>
    <div class="bg-light mr-3 pt-3 px-3 pt-lg-5 px-md-5 text-center overflow-hidden flex-grow-1">
        <div class="my-3 p-3">
            <h2 class="display-5">Want to learn more?</h2>
            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Gym" asp-action="Index">Check out some of our gyms!</a>
        </div>
        <div class="bg-dark box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"></div>
    </div>
</div>

<section>
    <div class="container">
        @if (Model.Gyms == null)
        {
            <h1 class="fw-light">
                There are no gyms in your area! <a asp-area="" asp-controller="Account"
                asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3 class="display-4 font-weight-normal">Running clubs near @Model.City, @Model.State</h3>
                </div>
            
            </div>
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model.Gyms)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <a href="#">
                                <img class="card-img-top" src="@item.Image" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h4 class="card-title">@item.Title</h4>
                                    <p class="card-text text-body">@item.Description</p>
                                </a>
                            </div>
                            <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                <div class="text-small">
                                </div>
                                <div class="dropup">
                                    <a type="btn btn-success" asp-controller="Gym" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="SidekickButton">
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Share</a>
                                        <a class="dropdown-item" href="#">Comment</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

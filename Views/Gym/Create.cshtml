@using WorkoutWarriors.Data.Enum;
@using WorkoutWarriors.View_Model;

@model CreateGymViewModel
       
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Add A Gym</h4>
          <form method="post" asp-action="Create" class="needs-validation" novalidate>
                <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId"/>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Title" value="" required>
                <span asp-validation-for="Title" class="text-danger"></span>
                <div class="invalid-feedback">
                  Valid gym name is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label asp-for="Image">Image</label>
                <input asp-for="Image" class="form-control" placeholder="Image" value="" required>
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="invalid-feedback">
                  Valid image is required.
                </div>
              </div>
            </div>

            <div class="mb-3">
            <label asp-for="Description">Description</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">*</span>
                </div>
                <input asp-for="Description" class="form-control" placeholder="Description" value="" required>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="invalid-feedback" style="width: 100%;">
                  Proper description is required.
                </div>
              </div>
            </div>

            <div class="mb-3">
                <label asp-for="GymType">Gym</label>
                <select asp-for="GymType" asp-items="@Html.GetEnumSelectList<GymType>()">
                    <option>--Select--</option>
                </select>
            </div>

            <div class="mb-3">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" class="form-control" placeholder="1234 Main St">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label asp-for="Address.State">State</label>
                <select asp-for="Address.State" asp-items="@Html.GetEnumSelectList<StateTypes>()" class="custom-select d-block w-100" id="state" required>
                  <option value="">Choose...</option>
                </select>
                <div class="invalid-feedback">
                  Please provide a valid state.
                </div>
              </div>
              <div class="col-md-3 mb-3">
                <label asp-for="Address.City">City</label>
                <input asp-for="Address.City" class="form-control" placeholder="City">
                <span asp-validation-for="Address.City" class="text-danger"></span>
                <div class="invalid-feedback">
                  City required.
                </div>
              </div>
            </div>
        <hr class="mb-4">
        <button class="btn btn-primary btn-sm btn-block" type="submit">Create Gym</button>
        </form>
</div>
      